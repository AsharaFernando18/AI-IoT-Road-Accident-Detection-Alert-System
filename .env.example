# Database Configuration
DATABASE_URL="file:./database/roadsafenet.db"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"
TELEGRAM_CHAT_IDS="123456789,987654321"  # Comma-separated emergency contact IDs

# OpenStreetMap / Nominatim API
NOMINATIM_USER_AGENT="RoadSafeNet/1.0"
NOMINATIM_BASE_URL="https://nominatim.openstreetmap.org"

# YOLOv10 Model Configuration
YOLO_MODEL_PATH="ai_model/models/yolov10n.pt"
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# Application Configuration
SECRET_KEY="your-secret-key-change-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Flask Configuration
FLASK_APP="backend/app.py"
FLASK_ENV="development"
FLASK_DEBUG=True

# FastAPI Configuration
FASTAPI_HOST="0.0.0.0"
FASTAPI_PORT=8000

# Dashboard Configuration
DASH_HOST="0.0.0.0"
DASH_PORT=8050

# Hugging Face Configuration
HF_MODEL_NAME="facebook/mbart-large-50-many-to-many-mmt"
HF_CACHE_DIR="./cache/huggingface"

# Supported Languages (ISO codes)
SUPPORTED_LANGUAGES="en,es,ar,hi,zh"

# Alert Configuration
ALERT_COOLDOWN_SECONDS=300  # Minimum time between alerts for same location

# Video Stream Configuration
VIDEO_SOURCE="0"  # 0 for webcam, or path to video file, or RTSP URL
VIDEO_FRAME_SKIP=2  # Process every Nth frame

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/roadsafenet.log"

# Optional: Weather API (OpenWeatherMap)
WEATHER_API_KEY=""
WEATHER_API_URL="https://api.openweathermap.org/data/2.5/weather"

# Optional: Voice Alerts
ENABLE_VOICE_ALERTS=False
